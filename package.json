{
  "name": "vufind",
  "version": "4.1.2",
  "description": "Dev tools to handle css preprocessing, js magic, and compression",
  "repository": {
    "type": "git",
    "url": "http://github.com/vufind-org/vufind"
  },
  "bugs": {
    "url": "https://vufind.org/jira"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/themes/.*_(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "jsx",
      "js",
      "json"
    ]
  },
  "scripts": {
    "tslint": "./node_modules/.bin/tslint themes/**/*.{ts,tsx}",
    "test": "./node_modules/.bin/jest",
    "build": "./node_modules/.bin/webpack --display-error-details",
    "watch": "./node_modules/.bin/webpack --watch"
  },
  "dependencies": {
    "grunt": "^1.0.0",
    "grunt-sass": "^1.0.0",
    "@types/jquery": "^3.2.16",
    "axios": "^0.17.1",
    "es6": "0.0.7",
    "es6-map": "^0.1.5",
    "es6-shim": "^0.35.3",
    "grunt-contrib-less": "1.3.0",
    "grunt-less-to-sass": "0.0.10",
    "jasmine-core": "^2.8.0",
    "jit-grunt": "^0.10",
    "jquery": "^3.2.1",
    "require": "^2.4.20",
    "requirejs": "^2.3.5",
    "ts-promise": "^0.3.4",
    "typescript": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^21.1.6",
    "@types/node": "^8.0.53",
    "es6-promise": "^4.1.1",
    "eslint": "^4.11.0",
    "grunt-contrib-watch": "~1.0.0",
    "jasmine-matchers": "^0.2.3",
    "jest": "^21.2.1",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^21.2.2",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  }
}
